@model EntityLayer.Concrete.Heading
@{
    ViewBag.Title = "AddHeading";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<h2>Add Heading Page</h2>

<br />
@using (Html.BeginForm("AddHeading", "Heading", FormMethod.Post))
{
    <div class="form-group">

        @Html.Label("Enter Heading Title")
        @Html.TextBoxFor(x => x.HeadingName, new { @class = "form-control" })
        @Html.ValidationMessageFor(x => x.HeadingName)
        <br />
        @Html.Label("Category")
        @Html.DropDownListFor(x => x.CategoryID, (List<SelectListItem>)ViewBag.bagCategory, "Kategori seçiniz", new { @class = "form-control" })
        <br />
        @Html.Label("Writer")
        @Html.DropDownListFor(x => x.WriterID, (List<SelectListItem>)ViewBag.bagWriter, "Yazar seçiniz", new { @class = "form-control" })

        <br /><br />
        <button class="btn btn-outline-dark">Add Writer</button>

    </div>
}

