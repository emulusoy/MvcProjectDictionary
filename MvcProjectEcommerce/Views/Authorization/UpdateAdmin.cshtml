@model EntityLayer.Concrete.Admin

@{
    ViewBag.Title = "UpdateAdmin";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}




<h2>Update Admin Page</h2>


@using (Html.BeginForm("UpdateAdmin", "Authorization", FormMethod.Post))
{
    <div class="form-group">
        @Html.HiddenFor(x => x.AdminID, new { @class = "form-control" })
        <br />
        @Html.Label("Edit userName")
        @Html.TextBoxFor(x => x.AdminUsername, new { @class = "form-control" })
        <br />
        @Html.Label("Edit password")
        @Html.TextAreaFor(x => x.AdminPassword, new { @class = "form-control" })
        <br />
        @Html.Label("Edit role")
        @Html.TextAreaFor(x => x.AdminRole , new { @class = "form-control" })<br />
        <button class="btn btn-outline-dark">Save</button>

    </div>
}

