@model EntityLayer.Concrete.Heading
    @{
        ViewBag.Title = "NewHeading";
        Layout = "~/Views/Shared/_WriterLayout.cshtml";
    }

    <h2>Add Heading Page</h2>

    <br />
    @using (Html.BeginForm("NewHeading", "WriterPanel", FormMethod.Post))
    {
        <div class="form-group">

            @Html.Label("Enter Heading Title")
            @Html.TextBoxFor(x => x.HeadingName, new { @class = "form-control" })
            @Html.ValidationMessageFor(x => x.HeadingName)
            <br />
            @Html.Label("Select Category")
            @Html.DropDownListFor(x => x.CategoryID, (List<SelectListItem>)ViewBag.bagCategory, new { @class = "form-control" })
            <br />
            <button class="btn btn-outline-dark">Add Heading</button>

        </div>
    }

